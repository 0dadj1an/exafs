{% extends 'layouts/default.j2' %}
{% block title %}Reset Password{% endblock %}
{% block content %}
  <form>
  <div class="form-group">
    <div class="form-group col-sm-8">
      <div class="form-group">
        <label for="inputSourceAdress" class="control-label">Source address</label>
        <input type="text" class="form-control" id="inputSourceAdress" placeholder="S Network address" />
      </div>
      <div class="form-group ">  
        <label for="inputDestinationAdress" class="control-label">Destination address</label>
        <input type="text" class="form-control" id="inputDestinationAdress" placeholder="Network address" />
      </div>  
    </div>
    <div class="form-group col-sm-4">
        <label for="inputProtocol" class="control-label">Protocol</label>
          <div class="checkbox">
          <label>
            <input type="checkbox" value="icmp">
            ICMP
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="tcp">
            TCP
          </label>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="udp">
            UDP
          </label>
      </div>
  </div>

  <div class="form-group">
    <div class="form-group col-sm-4">
      <label for="sourcePort" class="control-label">Source port</label>
      <input type="text" class="form-control date" name="sourcePort">
    </div>
    <div class="form-group col-sm-4">
      <label for="destinationPort" class="control-label">Destination port</label>
      <input type="text" class="form-control date" name="destinationPort">
    </div>
    <div class="form-group col-sm-4">
      <label for="packetLength" class="control-label">Packet length</label>
      <input type="text" class="form-control date" name="packetLength">
    </div>
  </div>


  <div class="form-group">
    <div class="form-group col-sm-6">
    <label for="inputAction" class="control-label">Action</label>
      <select class="form-control" id="inputAction">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
        </select>
    </div>    
    <div class="form-group col-sm-6">
      <label for="inputExpiration" class="control-label">Expiration date</label>
      <div class='input-group date' id='dateTimeExpires'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
    </div>
  </div>

  <div class="form-group">
    <div class="form-group col-sm-12">
      <label for="inputComment" class="control-label">Comments</label>
      <textarea class="form-control" rows="3" name="inputComment" id="inputComment"></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>
</form>

<script type="text/javascript">
            $(function () {
                $('#dateTimeExpires').datetimepicker();
            });
</script>
{% endblock %}