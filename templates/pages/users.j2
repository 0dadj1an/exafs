{% extends 'layouts/default.j2' %}
{% block title %}Flowspec Users{% endblock %}
{% block content %}
    <table class="table table-hover">
    <tr>
    <th>Email</th>
    <th>Notice</th>
    <th>Role(s)</th>
    <th>Organization(s)</th>
    <th>Action</th>
    </tr>
    {% for user in users %}
        <tr>
        <td>{{ user.email }}</td>
        <td>
        {% if user.comment %}
            {{ user.comment }}
        {% endif %}
        </td>
        <td>
        {% for role in user.role %}
          {{ role.name }} 
        {% endfor %}
        </td>
        <td>
        {% for org in user.organization %}
            {{ org.name }}
        {% endfor %}
        </td>
        <td>
        <a class="btn btn-info" href="{{ url_for('edit_user', user_id=user.id) }}" role="button">
            <span class="glyphicon glyphicon-edit"></span>
        </a>
        <a class="btn btn-danger" href="{{ url_for('delete_user', user_id=user.id) }}" role="button">
            <span class="glyphicon glyphicon-remove"></span>
        </a>
        </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}