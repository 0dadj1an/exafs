{% extends 'layouts/default.j2' %}
{% block title %}Flowspec{% endblock %}
{% block content %}
    <h1>Default dashboard</h1>
    <h2>Rules IPv4</h2>
    <table class="table table-hover">
    <tr>
    <th>Source adress</th>
    <th>Source port(s)</th>
    <th>Destination adress</th>
    <th>Dest. port(s)</th>
    <th>Protocol(s)</th>
    </tr>
    {% for rule in rules_v4 %}
        <tr>
        <td>{{ rule.source }}/{{rule.source_mask}}</td>
        <td>
            {{ rule.source_port }}
        </td>
        <td>{{ rule.dest }}/{{rule.dest_mask}}</td>
        <td>
            {{ rule.dest_port }}
        </td>
        <td>
            {{ rule.protocol }}
        </td>
        </tr>
    {% endfor %}
    </table>

    <h2>Rules IPv6</h2>
    <table class="table table-hover">
    <tr>
    <th>Source adress</th>
    <th>Source port(s)</th>
    <th>Destination adress</th>
    <th>Dest. port(s)</th>
    <th>NextHeader(s)</th>
    </tr>
    {% for rule in rules_v6 %}
        <tr>
        <td>{{ rule.source }}/{{rule.source_mask}}</td>
        <td>
            {{ rule.source_port }}
        </td>
        <td>{{ rule.dest }}/{{rule.dest_mask}}</td>
        <td>
            {{ rule.dest_port }}
        </td>
        <td>
            {{ rule.next_header }}
        </td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}