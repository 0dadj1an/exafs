{% extends 'layouts/default.j2' %}
{% block title %}Flowspec Actions{% endblock %}
{% block content %}
    <table class="table table-hover">
    <tr>
    <th>Name</th>
    <th>Command</th>
    <th>Description</th>
    <th>action</th>
    </tr>
    {% for action in actions %}
        <tr>
        <td>{{ action.name }}</td>
        <td>{{ action.command }}</td>
        <td>
            {{ action.description }}
        </td>
        <td>
        <a class="btn btn-info" href="{{ url_for('edit_action', action_id=action.id) }}" role="button">edit</a>
        </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}